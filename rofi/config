rofi.theme: /usr/share/rofi/themes/android_notification.rasi

! "Delete previous char" Set from: Default
rofi.kb-remove-char-back:            BackSpace,Shift+BackSpace

! "Switch to the next mode." Set from: Default
rofi.kb-mode-next:                   Control+l

! "Switch to the previous mode." Set from: Default
rofi.kb-mode-previous:               Control+h

! "Accept entry" Set from: Default
rofi.kb-accept-entry:                Control+m,Return,KP_Enter


! "Select previous entry" Set from: Default
rofi.kb-row-up:                      Up,Control+p,ISO_Left_Tab,Control+k


! "Delete till the end of line" Set from: Default
rofi.kb-remove-to-eol:               Control+Shift+k

! "Select next entry" Set from: Default
rofi.kb-row-down:                    Down,Control+n,Control+j

rofi.modi: drun,run

rofi.show-icons: true
